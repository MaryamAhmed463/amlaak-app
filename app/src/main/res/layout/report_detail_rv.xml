<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_vehicle_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txt_vcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="VCode"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="dd/mm/yyyy"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_vcode"
                app:srcCompat="@drawable/station_ic" />

            <TextView
                android:id="@+id/txt_fuelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:text="FuelType"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/txt_vcode" />

            <TextView
                android:id="@+id/txt_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Qty: "
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toEndOf="@+id/txt_fuelType"
                app:layout_constraintTop_toBottomOf="@+id/txt_vcode" />

            <TextView
                android:id="@+id/txt_qty_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="qty value"
                app:layout_constraintStart_toEndOf="@+id/txt_qty"
                app:layout_constraintTop_toBottomOf="@+id/txt_vcode" />

            <TextView
                android:id="@+id/txt_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Unit Price: "
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toEndOf="@+id/txt_qty_value"
                app:layout_constraintTop_toBottomOf="@+id/txt_vcode" />

            <TextView
                android:id="@+id/txt_uPrice"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="16dp"
                android:text="unit price"
                app:layout_constraintStart_toEndOf="@+id/txt_unit_price"
                app:layout_constraintTop_toBottomOf="@+id/txt_vcode" />

            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Amount: "
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_fuelType" />

            <TextView
                android:id="@+id/txt_aValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="value"
                app:layout_constraintStart_toEndOf="@+id/txt_amount"
                app:layout_constraintTop_toBottomOf="@+id/txt_fuelType" />

            <TextView
                android:id="@+id/txt_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:text="KM Reading: "
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toEndOf="@+id/txt_aValue"
                app:layout_constraintTop_toBottomOf="@+id/txt_qty_value" />

            <TextView
                android:id="@+id/txt_kmValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="value"
                app:layout_constraintStart_toEndOf="@+id/txt_km"
                app:layout_constraintTop_toBottomOf="@+id/txt_qty_value" />

            <TextView
                android:id="@+id/txt_span"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="KM Span: "
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_amount" />

            <TextView
                android:id="@+id/txt_span_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="km span"
                app:layout_constraintStart_toEndOf="@+id/txt_span"
                app:layout_constraintTop_toBottomOf="@+id/txt_aValue" />

            <TextView
                android:id="@+id/txt_kmPerLitre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:text="KM/Litre: "
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toEndOf="@+id/txt_span_value"
                app:layout_constraintTop_toBottomOf="@+id/txt_km" />

            <TextView
                android:id="@+id/txt_kmperlitrevalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="value"
                app:layout_constraintStart_toEndOf="@+id/txt_kmPerLitre"
                app:layout_constraintTop_toBottomOf="@+id/txt_kmValue" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>