<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_fuelRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle_white"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_dateFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="00/00/0000"
                android:textColor="@color/dark_blue"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_dateTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="00/00/0000"
                android:textColor="@color/dark_blue"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_fuel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_dateFrom"
                app:srcCompat="@drawable/fule_ic" />

            <ImageView
                android:id="@+id/img_fuel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_fuel1"
                app:srcCompat="@drawable/fule_ic" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_fuel2"
                app:srcCompat="@drawable/fule_ic" />

            <TextView
                android:id="@+id/txt_m95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="M95"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/img_fuel1"
                app:layout_constraintTop_toTopOf="@+id/img_fuel1" />

            <TextView
                android:id="@+id/txt_m91"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="55dp"
                android:text="M91"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/img_fuel2"
                app:layout_constraintTop_toBottomOf="@+id/txt_m95" />

            <TextView
                android:id="@+id/txt_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="55dp"
                android:text="GO  "
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/txt_m91" />

            <TextView
                android:id="@+id/txt_m95_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:text="000.000"
                android:textColor="@color/text_gray"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/txt_m95"
                app:layout_constraintTop_toBottomOf="@+id/txt_dateFrom" />

            <TextView
                android:id="@+id/txt_m91_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="53dp"
                android:text="000.000"
                android:textColor="@color/text_gray"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/txt_m91"
                app:layout_constraintTop_toBottomOf="@+id/txt_m95_value" />

            <TextView
                android:id="@+id/txt_go_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="53dp"
                android:text="000.000"
                android:textColor="@color/text_gray"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/txt_go"
                app:layout_constraintTop_toBottomOf="@+id/txt_m91_value" />

            <TextView
                android:id="@+id/txt_bzl95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:text="Bz / L"
                android:textColor="@color/text_gray"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/txt_m95_value"
                app:layout_constraintTop_toBottomOf="@+id/txt_dateFrom" />

            <TextView
                android:id="@+id/txt_bzl91"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="53dp"
                android:text="Bz / L"
                android:textColor="@color/text_gray"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/txt_m91_value"
                app:layout_constraintTop_toBottomOf="@+id/txt_bzl95" />

            <TextView
                android:id="@+id/txt_bzlgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="53dp"
                android:text="Bz / L"
                android:textColor="@color/text_gray"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/txt_go_value"
                app:layout_constraintTop_toBottomOf="@+id/txt_bzl91" />

            <ImageView
                android:id="@+id/img_arrow_m95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toEndOf="@+id/txt_bzl95"
                app:layout_constraintTop_toBottomOf="@+id/txt_dateTo"
                app:srcCompat="@drawable/green_arrow" />

            <ImageView
                android:id="@+id/img_arrow_m91"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toEndOf="@+id/txt_bzl91"
                app:layout_constraintTop_toBottomOf="@+id/img_arrow_m95"
                app:srcCompat="@drawable/red_arrow" />

            <ImageView
                android:id="@+id/img_arrow_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toEndOf="@+id/txt_bzlgo"
                app:layout_constraintTop_toBottomOf="@+id/img_arrow_m91"
                app:srcCompat="@drawable/red_arrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>